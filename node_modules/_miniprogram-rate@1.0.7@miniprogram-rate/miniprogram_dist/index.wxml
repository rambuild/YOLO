<view class="rater-wrapper {{iClass}}">
  <!-- 取消按钮 -->
  <image wx:if="{{cancel}}" class="cancel-icon {{cancelPlace + '-cancel'}}" bindtap="cancel"  
    style="width:{{size + 'rpx'}};height:{{size + 'rpx'}}" src="./images/cancel-off.png" />
  <!-- start 按钮 -->
  <block wx:if="{{!faceIcon}}">
    <block wx:for="{{count}}" wx:key="index">
      <image bindtap="change" data-index="{{index}}" wx:if="{{index < value}}" 
        class="rater-icon" style="width:{{size + 'rpx'}};height:{{size + 'rpx'}}" src="{{starOn}}" />
      <image bindtap="change" data-index="{{index}}" wx:else class="rater-icon" 
        style="width:{{size + 'rpx'}};height:{{size + 'rpx'}}" src="{{starOff}}" />
    </block>
  </block>
  <block wx:else>
    <block wx:for="{{faceIconArr}}" wx:key="{{item}}">
        <image bindtap="change" data-index="{{index}}" wx:if="{{index < value}}" 
        class="rater-icon" style="width:{{size + 'rpx'}};height:{{size + 'rpx'}}" src="{{item}}" />
        <image bindtap="change" data-index="{{index}}" wx:else class="rater-icon" 
          style="width:{{size + 'rpx'}};height:{{size + 'rpx'}}" src="./images/face-off.png" />
    </block>
  </block>
</view>
