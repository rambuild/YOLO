<!--pages/Invitation/Invitation.wxml-->
<view class="box">
	<view class="title">
		<text>分享有礼</text>
	</view>
	<view>
		<view class="moneyBox">
			<view class="moneyBox_one one">
				<text>当前余额</text>
				<text bindtap='withdrawal'>全部提现</text>
			</view>
			<view class="moneyBox_one tow">
				<text>0</text>
				<text bindtap="ShareGo">我的分享码 ></text>
			</view>
			<view class="moneyBox_one three">
				<text>已提佣金：￥0.00</text>
				<text>累计佣金：￥0.00</text>
			</view>
		</view>
		<view class="money_list">
			<view
			 class="{{index==1?'active':''}}"
			 data-index="1"
			 bindtap="switchTab"
			>提成明细
			</view>
			<view
			 class="{{index==2?'active':''}}"
			 data-index="2"
			 bindtap="switchTab"
			>提现明细
			</view>
		</view>
		<block wx:if="{{index==1}}">
			<view class="pushlist" wx:for="{{tcDetails}}">
				<view class="pushlist_one">
					<view>提成明细</view>
					<view>{{item.updateTime}}</view>
				</view>
				<view>+ {{item.money}}</view>
			</view>
		</block>
		<block wx:if="{{index==2}}">
			<view class="getlist {{item.status==1?'color':''}}" wx:for="{{txDetails}}">
				<view class="getlist_one">
					<view>提现</view>
					<view>{{item.updateTime}}</view>
				</view>
				<view class="getlist_tow">{{item.status==1?"审核中":item.status==2?"已提现":""}}</view>
				<view class="getlist_therr">
					<view>- {{item.money}}</view>
				</view>
			</view>
		</block>
	</view>

	<!-- 提现弹出框 -->
	<form bindsubmit="formSubmit">
		<view
		 class="withdrawalBox"
		 bindtap="hideWithdrawBox"
		 hidden="{{!txFlag}}"
		>
			<view class="withdrawal" catchtap="tx">
				<view class="account">
					<view class="txText">
						<text>提现账号：</text>
					</view>
					<view class="inputBox">
						<input
						 class="weui-input"
						 auto-focus
						 placeholder="输入提现账号"
						 bindchange="inputChange"
						 value="{{withdrawal}}"
						/>
					</view>
				</view>
				<view class="type">
					<radio-group bindchange="radioChange">
						<label class="radio">
							<radio value="支付宝" />
							支付宝
						</label>
						<label class="radio">
							<radio value="微信" />
							微信
						</label>
					</radio-group>
				</view>
				<view class="btns">
					<button bindtap='cancel'>取消</button>
					<button class="confirmBtn" form-type="submit">确定</button>
				</view>
			</view>
		</view>
	</form>
</view>

