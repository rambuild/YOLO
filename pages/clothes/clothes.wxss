/* 背景图片 */
.image_bg {
  width: 100%;
  height: 100%;
}

/* 拖拽盒子样式 */
.drag_box {
  position: relative;
  position: absolute;
  width: 522rpx;
  height: 570rpx;
  top: 368rpx;
  left: 106rpx;
  background-color: transparent;
  overflow: hidden;
}

.border2 {
  border: 1rpx dashed #EEEEEE;
}

/* 里面图片样式 */
.drag_box_image {
  position: absolute;
  display: inline-block;
  width: 100%;
  height: 100%;
  transform-origin: center center;
}

/* 按钮样式 */
.drag_btn {
  height: 52rpx;
  width: 52rpx;
  z-index: 999;
}

/* 删除按钮 */
.btn1 {
  position: absolute;
  top: 342rpx;
  left: 80rpx;
}

/* 旋转按钮 */
.btn2 {
  position: absolute;
  top: 342rpx;
  left: 602rpx;
}

/* 镜面翻转按钮 */
.btn3 {
  position: absolute;
  top: 912rpx;
  left: 80rpx;
}

/* 缩放按钮 */
.btn4 {
  position: absolute;
  top: 912rpx;
  left: 602rpx;
}

/* 按钮里面的小图片 */
.drag_btn image {
  display: inline-block;
  width: 100%;
  height: 100%;
}

/* 下面的导航栏 */
.bar {
  position: fixed;
  top: 1106rpx;
  left: 0;
  display: flex;
  height: 100rpx;
  width: 100%;
  justify-items: center;
  align-items: center;
  background-color: #000;
}

/* 导航栏里面功能的样式 */
.bar view {
  display: flex;
  flex-direction: column;
  width: 25%;
  text-align: center;
  align-self: center;
  color: #fff;
}

/* 导航栏里面功能图片样式 */
.bar view image {
  display: inline-block;
  align-self: center;
  text-align: center;
  width: 40rpx;
  height: 36rpx;
}

/* 导航栏里面功能文本 */
.bar view text {
  font-size: 20rpx;
}

.bar_index {
  height: 286rpx;
  background-color: #000;
}

/*  */
.bar_index text {
  display: inline-block;
  font-size: 20rpx;
  color: #fff;
  margin: 24rpx 24rpx 0rpx 24rpx;
  padding-bottom: 24rpx;
}

.textActive {
  border-bottom: 3rpx solid #fff;
}

.bar_font {
  margin-top: 5rpx;
  height: 200rpx;
}

.bar_font view {
  height: 60rpx;
  font-size: 24rpx;
  line-height: 60rpx;
  text-align: center;
  border-bottom: 2rpx solid #000;
  background-color: #E3DDDD;
  color: #000;
}

