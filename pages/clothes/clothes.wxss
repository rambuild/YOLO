/* 背景图片盒子样式 */
.pages_box {
  border: 1rpx dashed #333;
}

.imageBox {
  width: 100%;
  height: 1078rpx;
  position: relative;
}

/* 背景  */
.image_face {
  display: inline-block;
  position: absolute;
  width: 76rpx;
  height: 76rpx;
  text-align: center;
  line-height: 76rpx;
  font-size: 40rpx;
  font-family: "Source Han Sans CN";
  color: #000000;
  background-color: #ffffff56;
}

.image_make {
  position: absolute;
  display: inline-block;
  top: 42rpx;
  left: 576rpx;
  width: 148rpx;
  height: 148rpx;
  border-radius: 50%;
  background-color: #FF6A69;
