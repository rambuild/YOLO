.goodsEvaluate {
  background-color: #eee;
  box-sizing: border-box;
}
.goodsEvaluate .evaluateItem {
  box-shadow: 0 10rpx 10rpx #ccc;
  margin: 30rpx 0;
}
.goodsEvaluate .items {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  align-items: center;
  background-color: #fff;
  font-size: 30rpx;
}
.goodsEvaluate .items .classify {
  flex: 1;
}
.goodsEvaluate .items .rateComponent {
  width: 50%;
}
.goodsEvaluate .itemEvaluate {
  background-color: #fff;
}
.goodsEvaluate .itemEvaluate .title {
  text-align: center;
  color: #999;
  font-size: 26rpx;
}
.goodsEvaluate .allEv {
  font-size: 38rpx;
}
.goodsEvaluate .commentArea {
  background-color: #fff;
  padding-bottom: 40rpx;
}
.goodsEvaluate .commentArea .text {
  padding: 20rpx 0;
  text-align: center;
  color: #999;
  font-size: 26rpx;
}
.goodsEvaluate .commentArea .textArea textarea {
  border-radius: 6rpx;
  background-color: #eee;
  width: 90%;
  height: 200rpx;
  margin: 0 auto;
  color: #333;
  padding: 15rpx;
}
.goodsEvaluate .submit {
  padding: 60rpx 0 80rpx 0;
}
.goodsEvaluate .submit button {
  background-color: #000;
  color: #ccc;
  padding: 25rpx 0;
}
.goodsEvaluate .goodsInfo {
  padding: 20rpx 30rpx;
  display: flex;
  background-color: #fff;
  justify-content: space-between;
  border-bottom: solid 1px #ddd;
}
.goodsEvaluate .goodsInfo .imgBox {
  width: 150rpx;
  height: 150rpx;
}
.goodsEvaluate .goodsInfo .imgBox image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}
.goodsEvaluate .goodsInfo .goodsText {
  width: 75%;
}
.goodsEvaluate .goodsInfo .goodsText {
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.goodsEvaluate .goodsInfo .goodsText .goodsItemInfo {
  color: #333;
}
