page {
    font-family: "Source Han Sans CN";
    background-color: #eee;
}

.index > .header {
    position: relative;
    background-color: transparent;
    width: 750rpx;
    height: 1104rpx;
}

.index > .header > .bg {
    display: block;
    position: absolute;
    left: 0;
    top: 0;
    z-index: -1;
    width: 750rpx;
    height: 1104rpx;
}

.index > .header > .bg .imgbg {
    width: 750rpx;
    height: 1104rpx;
}

.index > .header > .title {
    font-size: 40rpx;
    color: white;
    text-align: center;
}

.index > .header > .list {
    margin-top: 30rpx;
}

.index > .header > .list view,
.index > .header > .list scroll-view {
    background-color: transparent !important;
}

.index > .header > .list .van-tabs__line {
    background-color: white !important;
}

.index > .header > .cont {
    text-align: center;
}

.index > .header > .cont > .h1 {
    font-size: 100rpx;
    font-weight: bold;
    text-align: center;
    line-height: normal;
    margin-top: 120rpx;
}

.index > .header > .cont > .h2 {
    font-size: 32rpx;
    font-weight: light;
    text-align: center;
    line-height: normal;
    margin-top: 32rpx;
}

.index > .header > .cont > .btn {
    font-size: 32rpx;
    font-weight: bold;
    text-align: cneter;
    line-height: 68rpx;
    width: 206rpx;
    height: 68rpx;
    margin: 48rpx auto 0;
    border: 1px solid #000;
}

.index > .week {
    width: 750rpx;
    height: 172rpx;
    background-color: white;
}

.index > .week > .price {
    height: 80rpx;
    border-bottom: 2px solid #eee;
    font-size: 24rpx;
    font-weight: light;
    text-align: center;
    line-height: 80rpx;
}

.index > .week > .recommded {
    padding-left: 32rpx;
    font-size: 48rpx;
    font-weight: bold;
    text-align: left;
    line-height: 88rpx;
}

.index > .product {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 36rpx 30rpx;
}
