.myAddress {
	width: 750rpx;
	padding-bottom: 40rpx;
}

.title {
	width: 686rpx;
	padding: 0 33rpx;
	height: 80rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	background-color: #000;
	color: #fff;
}

.title > view:nth-of-type(1) {
	font-size: 40rpx;
	line-height: 80rpx;
}

.title > view:nth-of-type(2) {
	font-size: 32rpx;
	line-height: 80rpx;
}

.box {
	width: 686rpx;
	height: 280rpx;
	border-radius: 12rpx;
	background-color: white;
	margin: 52rpx auto 0;
	box-shadow: 0rpx 2rpx 10rpx rgba(0, 0, 0, 0.3);
}

.address {
	width: 686rpx;
	height: 198rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	border-bottom: 1rpx solid #ccc;
}

.addressIcon {
	width: 114rpx;
	height: 128rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.addressIcon > view:nth-of-type(1) {
	width: 70rpx;
	height: 70rpx;
	border-radius: 50%;
}

.addressIcon > view:nth-of-type(1) > image {
	width: 70rpx;
	height: 70rpx;
	border-radius: 50%;
}

.content {
	width: 400rpx;
	height: 128rpx;
	margin-right: 50rpx;
}

.basic {
	display: flex;
	justify-content: flex-start;
}

.basic > view:nth-of-type(1) {
	font-size: 42rpx;
}

.basic > view:nth-of-type(2) {
	font-size: 32rpx;
	margin-left: 22rpx;
	line-height: 60rpx;
	opacity: 0.7;
}

.addressDetail {
	width: 366rpx;
	font-size: 27rpx;
	opacity: 0.7;
	color: #000;
	display: -webkit-box;
	overflow: hidden;
	text-overflow: ellipsis;
	word-wrap: break-word;
	white-space: normal !important;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
/*复选框外框样式*/
checkbox .wx-checkbox-input {
	width: 36rpx;
	height: 36rpx;
	border: 4rpx solid #999;
	border-radius: 100%;
}
/*复选框外框选中样式*/
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
	border-color: #5dc11b;
}
/*复选框选中后内部样式*/
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
	width: 60%;
	height: 60%;
	background: #5dc11b;
	border-radius: 100%;
	content: "";
	transform: translate(-50%, -50%) scale(1);
	-webkit-transform: translate(-50%, -50%) scale(1);
}
.bj {
	width: 140rpx;
	height: 128rpx;
	text-align: center;
	line-height: 128rpx;
	font-size: 32rpx;
	border-left: 2rpx solid #ddd;
	border-radius: 16rpx;
}
.make {
  width: 686rpx;
