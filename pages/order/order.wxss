.order {
	width: 750rpx;
	background-color: #eeeeee;
}
.navigation {
	width: 750rpx;
	height: 80rpx;
	background-color: #000;
	overflow: hidden;
	display: flex;
	flex-direction: row;
	white-space: nowrap;
}
.navigation .wrapper{
	width: 90%;
	height: 100%;
	margin: 0 auto;
}
.navItem {
	display: inline-block;
	width: 100rpx;
	height: 80rpx;
	text-align: center;
	line-height: 80rpx;
	color: #ccc;
	font-size: 32rpx;
	margin-right: 40rpx;
	box-sizing: border-box;
}

.content {
	padding: 0 32rpx;
	width: 686rpx;
}

.qb,
.dfk,
.dfh,
.dsh,
.dpj,
.tk {
	width: 100%;
